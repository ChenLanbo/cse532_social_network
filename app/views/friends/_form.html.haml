= form_for @friend do |f|
  -if @friend.errors.any?
    #error_explanation
      %h2= "#{pluralize(@friend.errors.count, "error")} prohibited this friend from being saved:"
      %ul
        - @friend.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :fu_id
    = f.number_field :fu_id
  .actions
    = f.submit 'Save'
