= form_for @advertisement do |f|
  -if @advertisement.errors.any?
    #error_explanation
      %h2= "#{pluralize(@advertisement.errors.count, "error")} prohibited this advertisement from being saved:"
      %ul
        - @advertisement.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :company
    = f.text_field :company
  .field
    = f.label :item_name
    = f.text_field :item_name
  .field
    = f.label :unit_price
    = f.text_field :unit_price
  .field
    = f.label :quantity
    = f.number_field :quantity
  .actions
    = f.submit 'Save'
