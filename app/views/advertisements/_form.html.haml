.newAd
	%h3 New Ad
	= form_for(@advertisement) do |f|
		-if @advertisement.errors.any?
			#error_explanation
				%h2= "#{pluralize(@advertisement.errors.count, "error")} prohibited this advertisement from being saved:"
				%ul
					- @advertisement.errors.full_messages.each do |msg|
						%li= msg
		%table
			%tr.field
				%td= f.label :category
				%td= f.text_field :category, :size => 10
			%tr.field
				%td= f.label :company
				%td= f.text_field :company, :size => 10
			%tr.field
				%td= f.label :item_name
				%td= f.text_field :item_name, :size => 10
			%tr.field
				%td= f.label :unit_price
				%td= f.text_field :unit_price, :size => 10
			%tr.field
				%td= f.label :quantity
				%td= f.number_field :quantity, :size => 15, :in => 1..10000
			%tr.actions
				%td= f.submit 'Save'
