<!DOCTYPE html>
<html>
<head>
  <title>Cse532SocialNetwork</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div id="header">
	<div id="navigationBar">
		<% if session[:user_id] %>
			<%= link_to "Friends", :controller => :friends, :action => :index %>
			<%= link_to "Requests", :controller => :friend_requests, :action => :index %>
			<%= link_to "Find Friends", :controller => :users, :action => :index %>
			<%= link_to "Logout", :controller => :sessions, :action => :destroy %>
		<% else %>
			<%= link_to "Login", :controller => :sessions, :action => :new %>
			<%= link_to "Signup", :controller => :users, :action => :new %>
		<% end %>
	</div>
</div>

<div id="main">
	<% if session[:user_id] %>
		<div id="leftBar">
			<div>
				<%= link_to "Friends", :controller => :friends, :action => :index %>
			</div>
			<div>
				<%= link_to "Circles", :controller => :circles, :action => :index %>
			</div>
			<div>
				<%= link_to "Groups", :controller => :groups, :action => :index %>
			</div>
		</div>
	<% end %>

	<div id="mainBar">
		<%= yield %>
	</div>
	<div id="rightBar">
	</div>
</div>

</body>
</html>
