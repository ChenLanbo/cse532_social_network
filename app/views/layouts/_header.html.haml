#header
	#navigationBar
		- if session[:user_id]
			%ul
				%li= link_to "Hi, " + session[:first_name] + " " + session[:last_name], "/pages/#{session[:page_id]}"
				\|
				%li= link_to "Friends", :controller => :friends, :action => :index
				\|
				%li= link_to "Find Friends", :controller => :users, :action => :index
				\|
				%li= link_to "Requests", :controller => :friend_requests, :action => :index
				\|
				%li= link_to "Logout", :controller => :sessions, :action => :destroy
		- else
			= link_to "Login", :controller => :sessions, :action => :new
			= link_to "Signup", :controller => :users, :action => :new

