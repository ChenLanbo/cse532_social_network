= form_for(@circle, :remote => true) do |f|
	-if @circle.errors.any?
		#error_explanation
			%h2= "#{pluralize(@circle.errors.count, "error")} prohibited this circle from being saved:"
			%ul
				- @circle.errors.full_messages.each do |msg|
					%li= msg

	.field
		= f.text_field :name, :size => 20, :id => 'newCircleName', :placeholder => 'Add new circle'
		= f.submit 'Add'
