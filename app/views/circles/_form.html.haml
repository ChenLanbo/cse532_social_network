= form_for @circle do |f|
  -if @circle.errors.any?
    #error_explanation
      %h2= "#{pluralize(@circle.errors.count, "error")} prohibited this circle from being saved:"
      %ul
        - @circle.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
