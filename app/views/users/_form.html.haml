= form_for @user do |f|
  -if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :hashed_password
    = f.text_field :hashed_password
  .field
    = f.label :salt
    = f.text_field :salt
  .field
    = f.label :day_of_birth
    = f.number_field :day_of_birth
  .field
    = f.label :month_of_birth
    = f.number_field :month_of_birth
  .field
    = f.label :year_of_birth
    = f.number_field :year_of_birth
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :address
    = f.text_field :address
  .actions
    = f.submit 'Save'
