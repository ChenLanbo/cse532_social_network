= form_for @group_request do |f|
  -if @group_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@group_request.errors.count, "error")} prohibited this group_request from being saved:"
      %ul
        - @group_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :group_id
    = f.number_field :group_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
