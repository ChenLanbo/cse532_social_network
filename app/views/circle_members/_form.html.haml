= form_for @circle_member do |f|
  -if @circle_member.errors.any?
    #error_explanation
      %h2= "#{pluralize(@circle_member.errors.count, "error")} prohibited this circle_member from being saved:"
      %ul
        - @circle_member.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :circle_id
    = f.number_field :circle_id
  .field
    = f.label :user_id
    = f.number_field :user_id
  .actions
    = f.submit 'Save'
